#!/bin/sh

if [ -d "$1" ]; then
  # If $1 is a directory, list its contents, including hidden files.
  ls "$1"
elif [ -f "$1" ]; then
  # If $1 is a regular file, open it with the "micro" editor.
  micro "$1"
else
  # If $1 is neither a directory nor a regular file, list the current directory.
  ls
fi
