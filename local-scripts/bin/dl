#!/bin/sh


url=$1
ddirname=""

if [[ $url == *.iso ]];
then
	ddirname="Archives/iso"
elif [[ $url == *.tar.* ]]; then
	ddirname="Archives/tar"
elif [[ $url == *.rar ]]; then
	ddirname="Archives/rar"
elif [[ $url == *.zip ]]; then
	ddirname="Archives/zip"
else
	ddirname="Misc"
fi

maindir=~/Downloads

if [[ $2 ]];
then
  maindir=$2
fi

echo Downloading $url at $ddirname

curl -L -O --output-dir $maindir/$ddirname --retry 999 --retry-max-time 0 -C - $url
